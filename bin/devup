#!/bin/bash

## download a bunch of scripts for bootstrapping 
## development on a new machine

SOURCE="$1"
TARGET="$2"

if [ -z "$SOURCE" -o "$TARGET" ]; then
  echo "Usage: $0 me@devup.mydomain.com user@target"
  exit 1
fi

rsync -av "$DEVUP_SOURCE":devup/ /tmp/devup/
rsync -av /tmp/devup "$DEVUP_TARGET":devup/
ssh $DEVUP_TARGET devup/devup.sh
